<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs.chromashot.MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:scrollY="0dp"
        android:src="@drawable/long_bg2_2" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/how_to_btn"
            style="@android:style/Widget.Holo.CompoundButton.RadioButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/main_highscore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/plate_gray_2"
            android:backgroundTint="@color/WhtieOverlay"
            android:backgroundTintMode="src_atop"
            android:elevation="24dp"
            android:text="How To Play"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/options_btn"
            style="@android:style/Widget.Holo.CompoundButton.RadioButton"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:background="@drawable/plate_gray_3"
            android:backgroundTint="@color/WhtieOverlay"
            android:backgroundTintMode="src_atop"
            android:elevation="24dp"
            android:text="OPTIONS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/Black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/start_btn"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            android:background="@drawable/plate_gray_1"
            android:backgroundTint="@color/WhtieOverlay"
            android:backgroundTintMode="src_atop"
            android:cropToPadding="false"
            android:elevation="24dp"
            android:text="START"
            android:textColor="@color/White"
            android:textSize="50sp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="36dp" />

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/logo_chroma_draft" />

        <TextView
            android:id="@+id/main_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_btn"
            android:layout_centerHorizontal="true"
            android:text="Highscore:"
            android:textColor="@color/Whtie"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
