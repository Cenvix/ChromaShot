<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_paper_bg3"
    android:backgroundTint="@color/colorPrimary"
    android:backgroundTintMode="multiply"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs.chromashot.MainActivity">

    <Button
        android:id="@+id/options_btn"
        style="@android:style/Widget.Holo.CompoundButton.RadioButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/start_btn"
        android:layout_below="@+id/start_btn"
        android:layout_marginTop="30dp"
        android:background="@drawable/img_options_btn"
        android:backgroundTint="@color/Red"
        android:backgroundTintMode="src_atop"
        android:elevation="24dp"
        android:text="OPTIONS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/White"
        android:textSize="50sp" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/logo_view"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:background="@drawable/img_start_btn"
        android:backgroundTint="@color/GreenAqua"
        android:backgroundTintMode="src_in"
        android:cropToPadding="false"
        android:elevation="24dp"
        android:text="START"
        android:textColor="@color/White"
        android:textSize="50sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/logo_chroma_draft" />
</RelativeLayout>
