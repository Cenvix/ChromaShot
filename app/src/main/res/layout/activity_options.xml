<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pop_up_square"
    android:backgroundTint="@color/magenta"
    android:backgroundTintMode="src_atop"
    android:elevation="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switch_sound"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="OPTIONS"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switch_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="26dp"
        android:checked="true"
        android:elegantTextHeight="false"
        android:text="Sound" />

    <Switch
        android:id="@+id/switch_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switch_sound"
        android:layout_below="@+id/switch_sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:checked="true"
        android:elegantTextHeight="false"
        android:text="Music" />

    <Button
        android:id="@+id/reset_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Highscore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

</RelativeLayout>
